# Podsync Web Environment Variables
# Copy this file to .env and configure your settings
# These variables override config.toml settings

# =============================================================================
# API Keys
# =============================================================================
# Multiple keys can be space-separated for automatic rotation

# YouTube API Key (get one at: https://console.cloud.google.com/apis/credentials)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Vimeo API Key (get one at: https://developer.vimeo.com/apps)
# VIMEO_API_KEY=your_vimeo_api_key_here

# SoundCloud API Key
# SOUNDCLOUD_API_KEY=your_soundcloud_api_key_here

# Twitch API Key (format: CLIENT_ID:CLIENT_SECRET)
# Get credentials at: https://dev.twitch.tv/console/apps
# TWITCH_API_KEY=client_id:client_secret

# =============================================================================
# Timezone
# =============================================================================
# Set your local timezone for proper scheduling and logging
# List: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/Los_Angeles

# =============================================================================
# Web UI Settings
# =============================================================================
# Enable or disable the web UI (true/false or 1/0)
# PODSYNC_WEB_UI=true

# =============================================================================
# History Tracking
# =============================================================================
# Enable download history tracking (true/false or 1/0)
# PODSYNC_HISTORY_ENABLED=true

# Number of days to keep history entries
# PODSYNC_HISTORY_RETENTION_DAYS=30

# Maximum number of history entries to keep
# PODSYNC_HISTORY_MAX_ENTRIES=1000

# =============================================================================
# Configuration File Path
# =============================================================================
# Override the default config file path
# PODSYNC_CONFIG_PATH=/app/config.toml
